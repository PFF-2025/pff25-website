<!DOCTYPE html>
<html lang="{{ craft.app.language }}">
{% set pffSettings = craft.app.globals.getSetByHandle('pffSettings') %}
<head>
	<meta charset="UTF-8">
	<title>{{ entry.title }}</title>
	<meta name="description" content="{{ pffSettings.metaDescription }}" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="referrer" content="origin-when-cross-origin" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
	<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
	<link rel="icon" type="image/x-icon" href="/favicon/favicon.ico" />
	<link rel="manifest" href="/favicon/site.webmanifest" />
	<link rel="stylesheet" href="/iconfonts/icomoon/style.css?v={{ craft.app.config.custom.assetVersion }}">
	<link rel="stylesheet" href="/css/_global.css?v={{ craft.app.config.custom.assetVersion }}">
	<link rel="stylesheet" href="/css/menu.css?v={{ craft.app.config.custom.assetVersion }}">
	<link rel="stylesheet" href="/css/page.css?v={{ craft.app.config.custom.assetVersion }}">
	<link rel="stylesheet" href="/css/footer.css?v={{ craft.app.config.custom.assetVersion }}">
	<style>
		{{ pffSettings.customCss | raw }}
	</style>
	<script async src="/scripts.js?v={{ craft.app.config.custom.assetVersion }}"></script>
	{% set environment = getenv('CRAFT_ENVIRONMENT') %}
	{% if environment == 'production' %}
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-87MT3F8FTJ"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-87MT3F8FTJ');
		</script>
	{% endif %}
</head>
